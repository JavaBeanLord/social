<% unless @group.membership(current_user) or !current_user %>
	<% unless @group.private %>
		<%= button_to "Join", join_group_path(@group), "data-mini" => true %>
	<% else %>
		<%= button_to "Request to join", request_to_join_path(@group), method: :get, "data-mini" => true %>
	<% end %>
<% else %>
	<%= button_to("Leave", leave_group_path(@group), method: :delete, "data-mini" => true) if current_user %>
<% end %>
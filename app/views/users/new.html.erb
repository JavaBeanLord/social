<div id="card">
<%= form_for @user do |f| %>
	<p>
		<%= f.label :username %>
		<%= f.text_field :name %>
	</p>
	<p>
		<%= f.label :email %>
		<%= f.text_field :email %>
	</p>
	<p>
		<%= f.label :password %>
		<%= f.password_field :password %>
	</p>
	<p>
		<%= f.label :confirm_password %>
		<%= f.password_field :password_confirmation %>
	</p>
	<p>
		<%= f.submit "Sign up" %>
	</p>
<% end %>
</div>
<div id="card"><%= render "posts/new" if current_user %></div></br>

<% @feed.each do |post| %>
	<div id="card">
		<table align="center">
			<tr>
				<td>
					<%= link_to profile_picture(User.find(post.user_id), "50x50"), user_path(post.user_id) %>
				</td>
				<td>
					<%= link_to post.user.name.capitalize, user_path(post.user) %>
					<% if post.image? %>
						posted a picture:
					<% end %>
				</td>
			</tr>
		</table>
		
		<div align="center">
			<p><%= post.text %></p>
			<%= link_to(image_tag(post.image_url, width: "90%"), show_post_path(post.user, post)) if post.image? %>
		</div>
		
		<table align="center">
			<tr>
				<td>
					<%= button_to post.likes.to_i, like_path(post.user, post), :method => "get",
						"data-icon" => "star" %>
				</td>
				<td>
					<%= button_to "Comment", show_post_path(post.user, post), :method => "get" %>
				</td>
			</tr>
		</table>
	</div>
	</br>
<% end %>
<!-- may need to ask for email and bio later for sign up simplicity -->

<%= form_for @user do |f| %>
	<p>
		<%= f.label :email %><br>
		<%= f.text_field :email %>
	</p>
	<p>
		<%= f.label :password %><br>
		<%= f.password_field :password %>
	</p>
	<p>
		<%= f.label :confirm_password %><br>
		<%= f.password_field :password_confirmation %>
	</p>
	<p>
		<%= f.label :username %><br>
		<%= f.text_field :name %>
	</p>
	<p>
		<%= f.submit "Sign up" %>
	</p>
<% end %>

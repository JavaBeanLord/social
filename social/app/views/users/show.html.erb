<!-- users -->

<h1>
	<%= @user.name %>
</h1>

<%= render "follow_form" %>

<p>
	<strong>About me:</strong>
	<%= @user.bio %>
</p>

<p>
	Followers: <%= @user.followers.count %>
	Following: <%= @user.followed_users.count %>
</p>

<div>
	<%= render "posts/new" if current_user and current_user.id == @user.id %>
</div>

<table>
  <% @user.posts.each do |post| %>
    <tr>
      <td><%= post.text %></td>
	  <td><%= post.likes %></td>
	  <td><%= link_to "Like", like_path(params[:id], post) %></td>
	  <td><%= link_to 'Show', show_post_path(params[:id], post) %></td>
	  <% if current_user and current_user.id == @user.id %>
        <td><%= link_to 'Destroy', user_post_path(params[:id], post),
          method: :delete, data: { confirm: 'Are you sure?' } %></td>
	  <% end %>
    </tr>
  <% end %>
</table>
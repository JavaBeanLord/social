<!-- social users -->

<h1>
  <%= @user.name %>
</h1>

<p>
  <%= link_to "New post", new_user_post_path(@user) %>
</p>
 
<p>
  <strong>My story:</strong>
  <%= @user.bio %>
</p>

<table>
  <% @user.posts.each do |post| %>
    <tr>
      <td><%= post.text %></td>
	  <td><%= link_to 'Show', user_post_path(current_user.id, post) %></td>
      <td><%= link_to 'Destroy', user_post_path(current_user.id, post),
		  method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
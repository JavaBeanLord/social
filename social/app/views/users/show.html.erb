<!-- users -->

<table>
	<tr>
		<td>
			<%= gravatar_for @user %>
		</td>
		<td>
			<h1>
				<%= @user.name.capitalize %>
			</h1>
		</td>
		<td>
			<%= render "follow_form" if current_user %>
		</td>
	</tr>
</table>

<table>
	<tr>
		<td>
			<strong>About me:</strong>
			<%= @user.bio %>
		</td>
		<td>
			<%= button_to "Message", new_user_chat_path(@user), :method => "get" %>
		</td>
	</tr>
</table>

<table>
	<tr>
		<td>
			<%= link_to "Followers: #{@user.followers.count}", followers_user_path(@user) %>
		</td>
		<td>
			<%= link_to "Following: #{@user.followed_users.count}", following_user_path(@user) %>
		</td>
	</tr>
</table>

<table>
	<tr>
		<td>
			<%= render "posts/new" if current_user and current_user.id == @user.id %>
		</td>
	</tr>
</table>

<table>
	<% @user.posts.each do |post| %>
	<tr>
		<td><%= post.text %></td>
		<td><%= post.likes %></td>
		<td><%= button_to "Like", like_path(params[:id], post), :method => "get" %></td>
		<td><%= button_to 'Show', show_post_path(params[:id], post), :method => "get" %></td>
		</tr>
	<% end %>
</table>